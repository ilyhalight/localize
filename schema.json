{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ConfigSchema",
  "definitions": {
    "ConfigSchema": {
      "type": "object",
      "properties": {
        "rootPath": {
          "type": "string"
        },
        "localesDir": {
          "type": "string"
        },
        "hashFile": {
          "type": "string"
        },
        "ignoreLocales": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "service": {
          "$ref": "#/definitions/TranslationService"
        },
        "withTypes": {
          "type": "boolean"
        },
        "typesFile": {
          "type": "string"
        },
        "parseDotNotation": {
          "type": "boolean"
        },
        "$schema": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "TranslationService": {
      "type": "string",
      "enum": [
        "yandexbrowser",
        "yandexcloud",
        "yandextranslate",
        "yandexgpt",
        "msedge",
        "bing",
        "libretranslate"
      ]
    }
  }
}
